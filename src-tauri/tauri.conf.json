{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Real Life Context Switching",
  "version": "0.1.0",
  "identifier": "com.natts10.reallifecontextswitching",
  "build": {
    "beforeBuildCommand": "npm --prefix ./frontend run build:web || npm --prefix ../frontend run build:web",
    "beforeDevCommand": "npm --prefix ./frontend run dev:web || npm --prefix ../frontend run dev:web",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Real Life Context Switching",
        "width": 900,
        "height": 1150,
        "minWidth": 900,
        "minHeight": 1150,
        "resizable": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
